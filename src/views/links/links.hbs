<div class="container p-4">
    <div class="row">
        {{#each enlaces}}
            <div class="col-md-3 m-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">
                            {{description}}
                        </p>
                        <p>
                           {{timeago created_at}} 
                        </p>
                        <a href="/links/delete/{{id}}"  class="btn btn-danger">delete link</a>
                        <a href="/links/edit/{{id}}"  class="btn btn-secondary">Edit link</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No se han cargado Tareas el dia de Hoy</p>
                    <a href="/links/add">Crea Uno!!</a>

                </div> 
            </div>
        {{/each}}
    </div>
</div>